FROM microsoft/dotnet:2.1-aspnetcore-runtime AS base
WORKDIR /app
EXPOSE 80

FROM microsoft/dotnet AS build
WORKDIR /src
COPY ["src/JiaABP.Web.Host/JiaABP.Web.Host.csproj","JiaABP.Web.Host/"]
COPY ["src/JiaABP.Migrator/JiaABP.Migrator.csproj","JiaABP.Migrator/"]
COPY ["src/JiaABP.Web.Core/JiaABP.Web.Core.csproj","JiaABP.Web.Core/"]
COPY ["src/JiaABP.Application/JiaABP.Application.csproj","JiaABP.Application/"]
COPY ["src/JiaABP.Core/JiaABP.Core.csproj","JiaABP.Core/"]
COPY ["src/JiaABP.EntityFrameworkCore/JiaABP.EntityFrameworkCore.csproj","JiaABP.EntityFrameworkCore/"]
RUN dotnet restore "JiaABP.Web.Host/JiaABP.Web.Host.csproj"
COPY . .
WORKDIR "/src/JiaABP.Web.Host"
RUN dotnet build "JiaABP.Web.Host.csproj" -c Release -o /app

